<view class="recommendSongContainer" wx:if="{{recommendList.length}}">
  <view class="header">
    <image src="/static/images/recommendSong/recommendSong.png"></image>
    <view class="date">
      <text class="day">{{day}}/</text>
      <text class="month">{{month}}</text>
    </view>
  </view>
  <view class="ListContainer">
    <view class="listHeader">
      <text>播放全部</text>
      <!-- <text class="changeMore">多选</text> -->
    </view>
    <!-- 内容区 -->
    <scroll-view class="listScroll" scroll-y>
      <view class="scrollItem" wx:for="{{recommendList}}" wx:key="id" data-index="{{index}}" data-song="{{item}}" bindtap="toSongDetail">
        <image src="{{item.al.picUrl}}"></image>
        <view class="musicInfo">
          <text class="musicName">{{item.name}}</text>
          <text class="author">{{item.ar[0].name}} - {{item.al.name}}</text>
        </view>
        <!-- <text class="iconfont icon-gengduo"></text> -->
      </view>
    </scroll-view>
  </view>
</view>